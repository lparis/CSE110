package customerPackage;

public class Customer {
	
	private static int custId;
	private static String custName;
	// private static String custStatus;
	// Privileged, Normal, Restricted
	enum Status {
		Privileged,
		Normal,
		Restricted
	}
	private Status custStatus;
	
	// Custom default constructor
	Customer(int id, String name, String status)
	{
		custId = id;
		custName = name;
		// custStatus = "normal";
	}
	
	public Customer(int id, String name, Status status)
	{
		this.id = id;
		this.name = name;
		this.status = status;
	}
	
	public Customer()
	{
		
	}
	
	// Set custId
	public static void setCustId(int id)
	{
		custId = id;
	}
	
	// Get custId
	public int getCustId()
	{
		return custId;
	}

	// Set custId
	public static void setCustName(String name)
	{
		custName = name;
	}

	// Get custId
	public String getCustName()
	{
		return custName;
	}

	// Set customer status
	public static void setCustStatus(String status)
	{
		custStatus = status;
	}

	// Get customer status
	public String getCustStatus()
	{
		return custStatus;
	}
}
