package customerPackage;

/**
 * @author lparis
 *
 */
public class CustomerService {

	/**
	 * 
	 */
	
	private CustomerDAO dao = new CustomerDAO();
	
	public Customer getCustomer(int id() {
		returnn dao.get(id);
	}
	
	public List<Customer> getAllCustomer() {
		return dao.getAll();
	}
	
	public Customer addCustomer(Customer c) {
		return dao.insert(c);
	}